    "def recommend_music(mood):\n",
    "    mood = mood.lower()\n",
    "\n",
    "    songs = {\n",
    "        \"happy\": [\"All The Stars ‚Äì Kendrick Lamar\", \"Can‚Äôt Stop the Feeling ‚Äì Justin Timberlake\", \"Uptown Funk ‚Äì Bruno Mars\"],\n",
    "        \"sad\": [\"Someone Like You ‚Äì Adele\", \"Arcade- Duncan Laurence\", \"The Scientist ‚Äì Coldplay\"],\n",
    "        \"angry\": [\"Numb ‚Äì Linkin Park\", \"Heartless ‚Äì Kanye West\", \"Tell Your Girlfriend ‚Äì Anne Marie\"],\n",
    "        \"relaxed\": [\"Sunflower ‚Äì Post Malone\", \"Strawberries and Cigarettes- Troye Sivan\", \"Slow Dance ‚Äì AJ Mitchell\"],\n",
    "        \"in love\": [\"I Wanna Be Yours- Arctic Monkeys\", \"I Like Me Better- Lauv\", \"everything ‚Äì John K\"]\n",
    "    }\n",
    "\n",
    "    matched = None\n",
    "    for key in songs:\n",
    "        if key in mood:\n",
    "            matched = key\n",
    "            break\n",
    "\n",
    "    if matched:\n",
    "        print(f\"\\nüé∂ Based on your mood ({matched}), here are some song suggestions:\")\n",
    "        for song in songs[matched]:\n",
    "            print(f\" - {song}\")\n",
    "    else:\n",
    "        print(\"\\n‚ùì Sorry, I couldn't understand the mood.\")\n",
    "\n",
    "def main():\n",
    "    print(\"üéß Mood-Based Music Recommender üé∂\")\n",
    "    mood = input(\"How are you feeling today? ( happy/ sad/ angry/ relaxed/ in love.)\")\n",
    "    recommend_music(mood)\n",
    "\n",
    "if __name__ == \"__main__\":\n",
    "    main()\n"
